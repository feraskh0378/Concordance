    </servlet>
    <servlet-mapping>
        <servlet-name>FilterSongWordsServlet</servlet-name>
        <url-pattern>/FilterSongWords</url-pattern>
    </servlet-mapping>
    
    
    
    
     <servlet>
        <servlet-name>GroupsServlet</servlet-name>
        <servlet-class>com.concordance.controller.GroupsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupsServlet</servlet-name>
