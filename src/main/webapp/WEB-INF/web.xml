    </servlet>
    <servlet-mapping>
        <servlet-name>FilterWordsServlet</servlet-name>
        <url-pattern>/FilterWords</url-pattern>
    </servlet-mapping>
    
      <servlet>
        <servlet-name>GetWordSongsServlet</servlet-name>
        <servlet-class>com.concordance.controller.GetWordSongsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
